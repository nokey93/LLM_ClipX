<?xml version="1.0" encoding="utf-8"?>
<pbf version="2.1" format="ecad" xsi:noNameSpaceSchemaLocation="pbf.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <pl />
    <o name="{PROJECT_NAME}" type="clipprj.project" id="0">
        <pl>
            <p name="clipprj.gapBetweenItems">{GAP_BETWEEN_ITEMS}</p>
        </pl>
        <ol>
            <!-- RAIL 1 -->
            <o name="Schiene 1" type="clipprj.rail" id="{RAIL_1_ID}">
                <pl>
                    <p name="clipprj.articleNumber">{RAIL_1_ARTICLE}</p>
                    <p name="clipprj.articleDesignation">{RAIL_1_DESIGNATION}</p>
                    <p name="clipprj.length">{RAIL_1_LENGTH}</p>
                </pl>
                <ol>
                    <!-- Rail 1 components sequence -->
                    <o name="" type="clipprj.mountingSpacingLeft" id="{LEFT_SPACING_ID}">
                        <pl>
                            <p name="clipprj.articleNumber"></p>
                            <p name="clipprj.width">{LEFT_WIDTH}</p>
                            <p name="clipprj.height">{RAIL_HEIGHT}</p>
                            <p name="clipprj.rotated">0</p>
                            <p name="clipprj.description"></p>
                            <p name="clipprj.connectionId">{CONNECTION_ID}</p>
                        </pl>
                    </o>
                    
                    <!-- Multiple components with optional blocking surfaces -->
                    {REPEAT_FOR_EACH_COMPONENT_ON_RAIL_1}
                    
                    <o name="" type="clipprj.mountingSpacingRight" id="{RIGHT_SPACING_ID}">
                        <pl>
                            <p name="clipprj.articleNumber"></p>
                            <p name="clipprj.width">{RIGHT_WIDTH}</p>
                            <p name="clipprj.height">{RAIL_HEIGHT}</p>
                            <p name="clipprj.rotated">0</p>
                            <p name="clipprj.description"></p>
                            <p name="clipprj.connectionId">{CONNECTION_ID}</p>
                        </pl>
                    </o>
                </ol>
            </o>
            
            <!-- RAIL 2 -->
            <o name="Schiene 2" type="clipprj.rail" id="{RAIL_2_ID}">
                <pl>
                    <p name="clipprj.articleNumber">{RAIL_2_ARTICLE}</p>
                    <p name="clipprj.articleDesignation">{RAIL_2_DESIGNATION}</p>
                    <p name="clipprj.length">{RAIL_2_LENGTH}</p>
                </pl>
                <ol>
                    <!-- Rail 2 components sequence -->
                    {REPEAT_COMPONENT_PATTERN_FOR_RAIL_2}
                </ol>
            </o>
            
            <!-- PLC PLUGS (if any) -->
            <o name="{PLC_PLUG_NAME}" type="clipprj.plcPlug" id="{PLC_ID}">
                <pl>
                    <p name="clipprj.articleNumber">{PLC_ARTICLE_NUMBER}</p>
                    <p name="clipprj.coordinates">{X_COORDINATE};{Y_COORDINATE}</p>
                    <p name="clipprj.description">{PLC_DESCRIPTION}</p>
                    <p name="clipprj.connectionpoints">{CONNECTION_POINTS}</p>
                    <p name="clipprj.connectionId">{PLC_CONNECTION_ID}</p>
                </pl>
            </o>
        </ol>
    </o>
    
    <!-- REFERENCES SECTION -->
    <refs>
        <ref id="{REFERENCE_INDEX}" oid="{REFERENCED_OBJECT_ID}" />
    </refs>
</pbf>
